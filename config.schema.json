{
  "pluginAlias": "PhilipsTV2020Platform",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "tvs": {
        "description": "TV config. You can configure multiple TVs if you own more than one.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Philips TV Name",
              "description": "A unique custom name of your TV, eg. \"Living Room TV\"",
              "type": "string",
              "required": true,
              "default": "Philips TV"
            },
            "api_url": {
              "title": "API URL",
              "description": "Full API URL, with protocol, address, port and API version.",
              "type": "string",
              "required": true,
              "pattern": "^http(s):\\/\\/[0-9a-zA-Z.:]+\\/[0-9]+\\/$",
              "placeholder": "eg. https://192.168.1.54:1926/6/"
            },
            "wol_mac": {
              "title": "MAC address of TV's WLAN",
              "description": "MAC address used only if you want to use Wake On LAN (or WoWLAN).",
              "type": "string",
              "required": false,
              "pattern": "^([A-F0-9]{2}:){5}[A-F0-9]{2}$",
              "placeholder": "eg. F0:A3:B2:D8:BE:7B"
            },
            "wol_options": {
              "title": "Advanced Wake On LAN options",
              "expandable": true,
              "type": "object",
              "required": false,
              "properties": {
                "from": {
                  "title": "Homebridge interface IP address",
                  "description": "IP of the interface that will broadcast the WOL packet",
                  "required": false,
                  "type": "string",
                  "pattern": "^([0-9]{1,3}.){3}[0-9]{1,3}$"
                },
                "port": {
                  "title": "WOL broadcast port",
                  "description": "Broadcast port of the the magic packet. Default: 9",
                  "required": false,
                  "type": "integer",
                  "default": "9"
                },
                "address": {
                  "title": "WOL Broadcast address",
                  "description": "Broadcast address of the subnet with a TV. Leave 255.255.255.255 if not sure.",
                  "required": false,
                  "type": "string",
                  "pattern": "^([0-9]{1,3}.){3}[0-9]{1,3}$",
                  "default": "255.255.255.255"
                },
                "count": {
                  "title": "WOL broadcast retries",
                  "required": false,
                  "type": "integer",
                  "default": "3",
                  "minimum": 1
                },
                "interval": {
                  "title": "Retry interval (milliseconds)",
                  "required": false,
                  "type": "integer",
                  "minimum": 50,
                  "default": "100"
                }
              }
            },
            "wake_up_delay": {
              "title": "Wake up delay after WOL (ms)",
              "description": "After WoL/WoWLAN, the TV needs a while to warm up before it can be turned on. This delay tells us how long to wait for the warm up.",
              "type": "integer",
              "required": false,
              "minimum": 100,
              "default": "4000"
            },
            "api_auth": {
              "title": "API Authentication",
              "type": "object",
              "required": false,
              "properties": {
                "username": {
                  "title": "API Username",
                  "type": "string",
                  "required": true,
                  "placeholder": "eg. 5l6n66UK7PYBVKAU"
                },
                "password": {
                  "title": "API Password",
                  "type": "string",
                  "required": true,
                  "placeholder": "eg. de8d0d1911a6d3662540114e1b3a5f29a473cc413bf6b38afb97820facdcb1fb"
                }
              }
            },
            "api_timeout": {
              "title": "Timeout of API requests (ms)",
              "description": "Maximum time to wait for the TV to respond (in milliseconds)",
              "type": "integer",
              "minimum": 100,
              "required": false,
              "default": "3000"
            },
            "auto_update_interval": {
              "title": "Auto-update interval (ms)",
              "description": "How often to refresh TV state (in milliseconds). A background task checks the TV state and this interval tells it how often to check it.",
              "type": "integer",
              "minimum": -1,
              "required": false,
              "default": "30000"
            },
            "metadata": {
              "title": "TV metadata",
              "description": "Metadata shown in device details, optional.",
              "type": "object",
              "required": false,
              "properties": {
                "model": {
                  "title": "TV Model",
                  "type": "string",
                  "required": false,
                  "placeholder": "eg. 55OLED705/12"
                },
                "manufacturer": {
                  "title": "TV Manufacturer",
                  "type": "string",
                  "required": false,
                  "default": "Philips"
                },
                "serialNumber": {
                  "title": "TV Serial Number",
                  "type": "string",
                  "required": false
                }
              }
            },
            "key_mapping": {
              "title": "Custom mapping for TV remote keys",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "remote_key": {
                    "title": "Homebridge RemoteKey",
                    "required": true,
                    "type": "string",
                    "default": "PLAY_PAUSE",
                    "enum": [
                      "REWIND",
                      "FAST_FORWARD",
                      "NEXT_TRACK",
                      "PREVIOUS_TRACK",
                      "PLAY_PAUSE",
                      "BACK",
                      "ARROW_UP",
                      "ARROW_DOWN",
                      "ARROW_LEFT",
                      "ARROW_RIGHT",
                      "SELECT",
                      "EXIT",
                      "INFORMATION"
                    ]
                  },
                  "philips_key": {
                    "title": "Philips TV remote key ID",
                    "type": "string",
                    "required": true
                  }
                }
              }
            },
            "ambilight_mode": {
              "title": "Ambilight mode",
              "description": "This option controls how to set up Ambilight \"light bulb\" in HomeKit",
              "required": true, 
              "type": "string",
              "default": "on_off",
              "oneOf": [
                {
                  "enum": [
                    "disabled"
                  ],
                  "title": "Disabled (no Ambilight control)"
                },
                {
                  "enum": [
                    "on_off"
                  ],
                  "title": "Simple on/off (with styles specified in options)"
                },
                {
                  "enum": [
                    "colorful"
                  ],
                  "title": "Color customization"
                }
              ]
            },
            "ambilight_options": {
              "title": "Ambilight options",
              "expandable": true,
              "required": false,
              "type": "object",
              "properties": {
                "default_on_style": {
                  "title": "Default style for Ambilight when the screen is ON",
                  "expandable": true,
                  "description": "You can get this style by enabling DEBUG in Homebridge and copying TV response for ambilight/currentconfiguration from logs",
                  "type": "object",
                  "required": false,
                  "properties": {
                    "styleName": {
                      "type": "string",
                      "required": true
                    },
                    "isExpert": {
                      "type": "boolean",
                      "required": true,
                      "default": false
                    },
                    "menuSetting": {
                      "type": "string",
                      "required": false
                    },
                    "stringValue": {
                      "type": "string",
                      "required": false
                    },
                    "algorithm": {
                      "type": "string",
                      "required": false
                    },
                    "colorSettings": {
                      "type": "object",
                      "required": false,
                      "properties": {
                        "color": {
                          "type": "object",
                          "properties": {
                            "hue": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 360
                            },
                            "saturation": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "brightness": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 255
                            }
                          }
                        },
                        "colorDelta": {
                          "type": "object",
                          "properties": {
                            "hue": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 360
                            },
                            "saturation": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "brightness": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 255
                            }
                          },
                          "speed": {
                            "type": "integer",
                            "minimum": 0
                          },
                          "mode": {
                            "type": "string",
                            "required": false
                          }
                        }
                      }
                    }
                  }
                },
                "always_use_default_on": {
                  "title": "Always use default style when the screen is ON",
                  "description": "This will override default behavior and will reset Ambilight to default style when you turn Ambilight ON (instead of restoring last used style)",
                  "type": "boolean",
                  "default": false
                },
                "default_off_style": {
                  "title": "Default style for Ambilight when the screen is OFF",
                  "expandable": true,
                  "description": "You can get this style by enabling DEBUG in Homebridge and copying TV response for ambilight/currentconfiguration from logs",
                  "type": "object",
                  "required": false,
                  "properties": {
                    "styleName": {
                      "type": "string",
                      "required": true
                    },
                    "isExpert": {
                      "type": "boolean",
                      "required": true,
                      "default": false
                    },
                    "menuSetting": {
                      "type": "string",
                      "required": false
                    },
                    "stringValue": {
                      "type": "string",
                      "required": false
                    },
                    "algorithm": {
                      "type": "string",
                      "required": false
                    },
                    "colorSettings": {
                      "type": "object",
                      "required": false,
                      "properties": {
                        "color": {
                          "type": "object",
                          "properties": {
                            "hue": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 360
                            },
                            "saturation": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "brightness": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 255
                            }
                          }
                        },
                        "colorDelta": {
                          "type": "object",
                          "properties": {
                            "hue": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 360
                            },
                            "saturation": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 100
                            },
                            "brightness": {
                              "type": "integer",
                              "minimum": 0,
                              "maximum": 255
                            }
                          },
                          "speed": {
                            "type": "integer",
                            "minimum": 0
                          },
                          "mode": {
                            "type": "string",
                            "required": false
                          }
                        }
                      }
                    }
                  }
                },
                "always_use_default_off": {
                  "title": "Always use default style when the screen is OFF",
                  "description": "This will override default behavior and will reset Ambilight to default style when you turn Ambilight ON (instead of restoring last used style)",
                  "type": "boolean",
                  "default": false
                }
              }
            },
            "ungroup_accessories": {
              "title": "Show separate accessories instead of 1 TV with sub-accessories (ungroup)",
              "type": "boolean",
              "default": false
            },
            "screen_switch": {
              "title": "Show a switch for TV Screen",
              "type": "boolean",
              "default": true
            },
            "default_input": {
              "title": "Name of default input (actual input is not on the list)",
              "type": "string",
              "required": false
            },
            "inputs": {
              "title": "Inputs/apps (optional)",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Input/app name",
                    "type": "string",
                    "required": true
                  },
                  "launch": {
                    "type": "object",
                    "required": false,
                    "properties": {
                      "intent": {
                        "type": "object",
                        "properties": {
                          "component": {
                            "type": "object",
                            "properties": {
                              "packageName": {
                                "type": "string",
                                "required": false
                              },
                              "className": {
                                "type": "string",
                                "required": false
                              }
                            }
                          },
                          "action": {
                            "type": "string",
                            "required": false,
                            "default": "android.intent.action.MAIN"
                          }
                        }
                      }
                    }
                  },
                  "channel": {
                    "title": "Channel",
                    "type": "string",
                    "required": false
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}